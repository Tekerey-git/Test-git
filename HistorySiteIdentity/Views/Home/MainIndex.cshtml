@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Главная</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets2/css/main.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

</head>

<body>

    <div id="page-wrapper">

        <!-- Header -->
        <section id="header">
            <div class="container">

                <div class="row">


                    <div class="col-12">
                        <h1><a asp-controller="Home" asp-action="Index" id="logo">Приветствие</a></h1>
                        <!-- Nav -->
                        <nav id="nav">
                            <style>
                                .div1 {
                                    position: absolute;
                                    right: 10px;
                                    top: 0px;
                                }

                                .row1 {
                                    margin-top: 55px;
                                    margin-left: 55px;
                                }
                                .ull{
                                    display:flex;
                                }
                            </style>
                            <div class="row1">

                                <div class="div1">
                                    <ul class="ull">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                        <li>
                                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @User.Identity.Name!</a>
                                        </li>
                                                <li>
                                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                        <button type="submit" class="button-small">Logout</button>
                                                    </form>
                                                </li>
                                        }
                                        else
                                        {
                                    <li>
                                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Логин</a>
                                    </li>
                                        }
                                       
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <a asp-controller="Home" asp-action="MainIndex">Главная</a>
                                    <a asp-controller="Home" asp-action="ThreeColumn">Военные части</a>
                                    <a asp-controller="Home" asp-action="TwoColumn1">О проекте</a>
                                    <a asp-controller="Home" asp-action="TwoColumn2">Структуры войск</a>
                                    <a asp-controller="Home" asp-action="OneColumn">Инструкция</a>
                                </div>
                            </div>

                        </nav>

                    </div>
                </div>
            </div>
            <div id="banner">
                <div class="container">
                    <div class="row">
                        <div class="col-6 col-12-medium">

                            <!-- Banner Copy -->
                            <p>Чтобы приступить к работе, просто кликните "Приступить к работе!"</p>
                            <a asp-controller="Home" asp-action="OneColumn" class="button-large">Приступить к работе!</a>

                        </div>
                        <div class="col-6 col-12-medium imp-medium">

                            <!-- Banner Image -->
                            <a asp-controller="Home" asp-action="" class="bordered-feature-image"><img src="~/images/banner.jpg" alt="" /></a>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features -->
        <section id="features">
            <div class="container">
                <div class="row">
                    <div class="col-3 col-6-medium col-12-small">

                        <!-- Feature #1 -->
                        <section>
                            <a href="#" class="bordered-feature-image"><img src="images/pic01.jpg" alt="" /></a>
                            <h2>Добро пожаловать на сайт!</h2>
                            <p>
                                Этот сайт посвящём <strong>Великой Отечественной войне 1941-1945 гг.</strong>, 
                                он бесплатен для использования и наполняется силами исторического сообщества.
                                Администрация сайта надеется на плодотворное сотрудничество.
                            </p>
                        </section>

                    </div>
                    <div class="col-3 col-6-medium col-12-small">

                        <!-- Feature #2 -->
                        <section>
                            <a href="#" class="bordered-feature-image"><img src="images/pic02.jpg" alt="" /></a>
                            <h2>Вопросы, отзывы, предложения.</h2>
                            <p>
                                Вы можете присылать свои отзывы, вопросы и предложения на почту <strong>Tekerey@mail.ru</strong>
                            </p>
                        </section>

                    </div>
                    <div class="col-3 col-6-medium col-12-small">

                        <!-- Feature #3 -->
                        <section>
                            <a href="#" class="bordered-feature-image"><img src="images/pic03.jpg" alt="" /></a>
                            <h2>Лицензионные соглашения</h2>
                            <p>
                                Лицензионные соглашения по технологиям Яндекса, использованым на сайте: <a href="https://yandex.ru/legal/maps_mobile_agreement/">Yandex</a> license,
                                Использование технологий производится согласно соглашению.
                            </p>
                        </section>

                    </div>
                    <div class="col-3 col-6-medium col-12-small">

                        <!-- Feature #4 -->
                        <section>
                            <a href="#" class="bordered-feature-image"><img src="images/pic04.jpg" alt="" /></a>
                            <h2>Правила работы</h2>
                            <p>
                                С правилами работы вы можете ознакомиться на страницах этого сайта.
                            </p>
                        </section>

                    </div>
                </div>
            </div>
        </section>

        <!-- Content -->
        <section id="content">
            <div class="container">
                <div class="row aln-center">
                    <div class="col-4 col-12-medium">

                        <!-- Box #1 -->
                        <section>
                            <header>
                                <h2>Кто мы?</h2>
                                @*<h3>A subheading about who we are</h3>*@
                            </header>
                            <a href="#" class="feature-image"><img src="images/pic05.jpg" alt="" /></a>
                            <p>
                                Мы группа энтузиастов из числа историков и программистов, объединённых одной идеей исторической справедливости.
                            </p>
                        </section>

                    </div>
                    <div class="col-4 col-6-medium col-12-small">

                        <!-- Box #2 -->
                        <section>
                            <header>
                                <h2>Что мы предлагаем?</h2>
                                @*<h3>A subheading about what we do</h3>*@
                            </header>
                            <ul class="check-list">
                                <li>Создать единую базу данных о воинских частях времён ВОВ 1941-1945 гг.</li>
                                <li>Определить местоположение каждой части в ходе войны</li>
                                <li>Привлечь внимание к этой задаче общественность и СМИ</li>
                                <li>Найти единомышленников и энтузиастов (как и мы!)</li>
                                <li>Однажды довести этот проект до полнго его завершения</li>
                            </ul>
                        </section>

                    </div>
                    <div class="col-4 col-6-medium col-12-small">

                        <!-- Box #3 -->
                        <section>
                            <header>
                                <h2>Что о нас говорят?</h2>
                                @*<h3>And a final subheading about our clients</h3>*@
                            </header>
                            <ul class="quote-list">
                                <li>
                                    <img src="~/images/pic07.jpg" alt="" />
                                    <p>"Это уникальный проект в своём роде!"</p>
                                    <span>Гражданин А, восторжен и неизвестен</span>
                                </li>
                                <li>
                                    <img src="~/images/pic06.jpg" alt="" />
                                    <p>"Прорыв для популяризации истории."</p>
                                    <span>Гражданин Б, удивлён и восхищён</span>
                                </li>
                                <li>
                                    <img src="~/images//pic08.jpg" alt="" />
                                    <p>"Теперь всё станет на свои места."</p>
                                    <span>Гражданин В, весел и доволен</span>
                                </li>
                            </ul>
                        </section>

                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <section id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-8 col-12-medium">

                        <!-- Links -->
                        <section>
                            <h2>Ссылки на важные ресурсы</h2>
                            <div>
                                <div class="row">
                                    <div class="col-3 col-12-small">
                                        <ul class="link-list last-child">
                                            <li><a href="https://archive.mil.ru/archival_service/central/history.htm">ЦАМО РФ</a></li>
                                            <li><a href="http://www.fsb.ru/fsb/supplement/archive.htm">Архив ФСБ</a></li>
                                            <li><a href="http://rgaspi.org/">Архив социально-политической истории</a></li>
                                            <li><a href="http://xn--80afqtm.xn--p1ai/category/tegi/tsk-kpss.shtml">Архив ЦК КПСС</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-3 col-12-small">
                                        <ul class="link-list last-child">
                                            <li><a href="http://podvignaroda.ru/?#tab=navHome">Подвиг народа</a></li>
                                            <li><a href="http://www.rusarchives.ru/tegi/velikaya-otechestvennaya-voyna">Федеральное архивное агентство</a></li>
                                            <li><a href="https://www.pobediteli.ru/">Победители</a></li>
                                            <li><a href="http://june-22.mil.ru/">Проект "22 июня"</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-3 col-12-small">
                                        <ul class="link-list last-child">
                                            <li><a href="https://obd-memorial.ru/html/">Мемориал</a></li>
                                            <li><a href="http://mil.ru/winner_may/docs.htm">Министерство Обороны РФ</a></li>
                                            <li><a href="https://www.moypolk.ru/">Бессмертный полк</a></li>
                                            <li><a href="https://ru.stsg.de/cms/dokstelle/content/o-tsentre/tsentr-dokumentatsii">Погибшие на территории ФРГ</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-3 col-12-small">
                                        <ul class="link-list last-child">
                                            <li><a href="http://www.pomnite-nas.ru/">Воинские захоронения</a></li>
                                            <li><a href="https://www.permgaspi.ru/vplen/index.php?char=%25D0%2590">Архив на базе Пермского университета</a></li>
                                            <li><a href="http://xn--b1afa8admefdd2c.xn--p1ai/izdat/ism.htm">Проект "Отечество"</a></li>
                                            <li><a href="http://www.rkka.ru/imaps.htm">Военные карты</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>

                    </div>
                    <div class="col-4 col-12-medium imp-medium">

                        <!-- Blurb -->
                        <section>
                            <h2>Дополнительное уведомление</h2>
                            <p>
                                Если вы нашли некий новый ресурс, который вы можете порекомендовать для улучшения качества содержимого баз данных нашего сайта, просим вас сообщить ссылку на него администрации.
                                Надеемся на плодотворное сотрудничество.
                            </p>
                        </section>

                    </div>
                </div>
            </div>
        </section>

        <!-- Copyright -->
        <div id="copyright">
            &copy; Untitled. All rights reserved.
        </div>

    </div>

    <!-- Scripts -->
    <script src="~/assets2/js/jquery.min.js"></script>
    <script src="~/assets2/js/browser.min.js"></script>
    <script src="~/assets2/js/breakpoints.min.js"></script>
    <script src="~/assets2/js/util.js"></script>
    <script src="~/assets2/js/main.js"></script>

</body>
</html>