<div>
    <p>Корпуса, включенные в данную армию:</p>
    <ul>
        @foreach (Corps c in Model.Corps)
        {
            <li>
                @c.Name
                <a asp-controller="Corps" asp-action="Edit" asp-route-id="@c.CorpsId" target="_blank">Edit</a>|
                <a asp-controller="Corps" asp-action="Details" asp-route-id="@c.CorpsId" target="_blank">Details</a>|
                <a asp-controller="Corps" asp-action="Delete" asp-route-id="@c.CorpsId" target="_blank">Delete</a>
            </li>

        }
    </ul>
</div>
<div>
    @if (Model.Image != null)
    {
        <img style='width:180px; height:220px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ArmyId">Edit</a> |
