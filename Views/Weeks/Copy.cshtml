@model HistorySiteIdentity.Models.Week

@{
    ViewData["Title"] = "Копирование";
}

<h1>Копирование</h1>
<h4>Неделя</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Copy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WeekNumber" class="control-label">Номер недели</label>
                <input asp-for="WeekNumber" class="form-control"  /> 
                <span asp-validation-for="WeekNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Дата начала недели</label>
                <input asp-for="Data" class="form-control" /> 
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


